generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Vehicle Type Model
enum wheel_type{
  TWO_WHEELER
  FOUR_WHEELER
}

model VehicleType{
  id Int @default(autoincrement()) @id
  wheel wheel_type
  name String
  vehicle VehicleModel[]
  @@unique([name])
}

//Vehicle Model Type Model
model VehicleModel{
  id Int @default(autoincrement()) @id
  modelname String
  vehicletypeid Int
  vehicletype VehicleType @relation(fields: [vehicletypeid], references: [id])
  available Boolean @default(true)
  bookings Booking[]
  @@unique([modelname])
}

//Booking Model
model Booking{
  id Int @default(autoincrement()) @id
  firstname String
  lastname String
  modelid Int
  vehiclemodel VehicleModel @relation(fields: [modelid],references: [id])
  startdate DateTime
  enddate DateTime
  @@unique([modelid,startdate,enddate])
}
